[Unit]
Description=Node Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
ExecStart=node_exporter --collector.filesystem.ignored-mount-points="^/(sys|proc|dev|host|etc)($$|/)" --no-collector.arp --no-collector.bcache --no-collector.conntrack

[Install]
WantedBy=default.target